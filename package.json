{
    "name": "deriv-com",
    "description": "Deriv.com static content",
    "version": "0.1.0",
    "author": "Deriv",
    "dependencies": {
        "@rebass/grid": "^6.0.0",
        "extend": "^3.0.2",
        "gatsby": "^2.9.4",
        "gatsby-image": "^2.1.4",
        "gatsby-plugin-manifest": "^2.1.1",
        "gatsby-plugin-offline": "^2.1.3",
        "gatsby-plugin-portal": "^1.0.7",
        "gatsby-plugin-react-helmet": "^3.0.12",
        "gatsby-plugin-sharp": "^2.1.5",
        "gatsby-source-filesystem": "^2.0.39",
        "gatsby-transformer-sharp": "^2.1.21",
        "gh-pages": "^2.0.1",
        "i18next": "^17.0.4",
        "i18next-browser-languagedetector": "^3.0.1",
        "i18next-xhr-backend": "^3.0.0",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-helmet": "^5.2.1",
        "react-i18next": "^10.11.2",
        "typeface-ibm-plex-sans": "0.0.61"
    },
    "devDependencies": {
        "babel-eslint": "9.0.0",
        "babel-plugin-styled-components": "^1.10.1",
        "eslint": "^5.16.0",
        "eslint-loader": "^2.1.2",
        "eslint-plugin-import": "^2.17.3",
        "eslint-plugin-react": "^7.14.0",
        "gatsby-plugin-eslint": "^2.0.5",
        "gatsby-plugin-react-svg": "^2.1.1",
        "gatsby-plugin-styled-components": "^3.1.0",
        "gatsby-plugin-stylelint": "^3.2.0",
        "prettier": "^1.18.2",
        "styled-components": "^4.3.2",
        "stylelint": "^10.1.0",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.8.0",
        "stylelint-webpack-plugin": "^0.10.5"
    },
    "keywords": [
        "deriv",
        "static"
    ],
    "license": "Apache License 2.0",
    "scripts": {
        "build": "npm run test && gatsby build --prefix-paths",
        "develop": "gatsby develop",
        "format": "prettier --write '**/*.js' '*.js'",
        "stylelint": "stylelint 'src/**/*.js' --formatter verbose",
        "eslint": "DEBUG=eslint:cli-engine eslint 'src/**/*.js'",
        "start": "npm run develop",
        "serve": "gatsby serve",
        "test": "npm run stylelint && npm run eslint",
        "deploy": "npm run build && gh-pages -d public -b master",
        "deploy-dev": "npm run build && gh-pages -d public",
        "deploy-branch": "PATH_PREFIX=/deriv-com/br/$branch_name npm run build && gh-pages -d public -e br/$branch_name"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/binary-com/deriv-com"
    },
    "bugs": {
        "url": "https://github.com/binary-com/deriv-com/issues"
    }
}
